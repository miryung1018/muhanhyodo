<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/main"
    tools:showIn="@layout/activity_main_menu"
    tools:context="kr.hs.emirim.app2015.muhanhyodo.MainMenuActivity">

    <TextView
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <TextView
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="@string/loading"
        android:id="@+id/user_name"
        />
    <TextView
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="@string/loading"
        android:id="@+id/user_tel"
        />

    <Button
        android:layout_weight="1"
        android:background="@drawable/read"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/goTodo"
        />

    <Button
        android:layout_weight="1"
        android:background="@drawable/medd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/goMed"/>

    <Button
        android:layout_weight="1"
        android:background="@drawable/adresss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/goAdd" />
</LinearLayout>
