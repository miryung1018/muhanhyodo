        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/registrationProgressBar" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
